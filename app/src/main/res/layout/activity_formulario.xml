<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <EditText
        android:hint="Nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Data Inicial:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <DatePicker
        android:id="@+id/data_inicial"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_width="match_parent"
        android:yearListSelectorColor="@color/colorPrimary"
        android:layout_height="142dp"></DatePicker>

    <TextView
        android:text="Data Final:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <DatePicker
        android:id="@+id/data_final"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_width="match_parent"
        android:layout_height="142dp"></DatePicker>

    <TextView
        android:text="Foco diario:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="78dp"
        android:layout_height="126dp"
        android:orientation="vertical"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/foco_diario"
        android:layout_toEndOf="@+id/foco_diario"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_weight="0.18">

        <NumberPicker
            android:id="@+id/foco_diario"
            android:layout_width="wrap_content"
            android:layout_height="142dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
        </NumberPicker>
    </RelativeLayout>

</LinearLayout>

